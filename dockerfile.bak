# 构建阶段
FROM --platform=$BUILDPLATFORM ubuntu:22.04 AS builder

ENV DEBIAN_FRONTEND=noninteractive
ENV ROS_DISTRO=humble

# RUN sed -i 's|http://archive.ubuntu.com/ubuntu|http://mirrors.tuna.tsinghua.edu.cn/ubuntu|g' /etc/apt/sources.list && \
#     sed -i 's|http://security.ubuntu.com/ubuntu|http://mirrors.tuna.tsinghua.edu.cn/ubuntu|g' /etc/apt/sources.list

# 设置本地化
RUN apt-get update && apt-get install -y locales
RUN locale-gen en_US en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LANGUAGE=en_US:en
ENV LC_ALL=en_US.UTF-8

# 安装必要的工具
RUN apt-get update && apt-get install -y \
    curl \
    gnupg2 \
    build-essential \
    cmake \
    git \
    wget \
    software-properties-common \
    python3-pip \
    bash

SHELL ["/bin/bash", "-c"]

# 添加 ROS 2 软件源
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg
RUN bash -c 'echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" | tee /etc/apt/sources.list.d/ros2.list > /dev/null'    

# 更新APT并安装 ROS 2
RUN apt-get update && apt-get install -y \
    ros-$ROS_DISTRO-desktop \
    python3-rosdep \
    python3-vcstool \
    python3-colcon-core \
    python3-colcon-common-extensions

# 初始化 rosdep
RUN rosdep init && rosdep update

# 设置环境变量
#### 罪魁祸首！！！
# ENV COLCON_DEFAULTS_FILE=/opt/ros/$ROS_DISTRO/setup.sh

# 复制源代码
COPY . /workspace
WORKDIR /workspace

# 安装依赖项
RUN apt-get update && rosdep update
RUN rosdep install --from-paths src --ignore-src -r -y

# 构建工作空间
RUN source /opt/ros/$ROS_DISTRO/setup.bash && colcon build --merge-install

# 运行阶段
FROM --platform=$TARGETPLATFORM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive
ENV ROS_DISTRO=humble

# RUN sed -i 's|http://archive.ubuntu.com/ubuntu|http://mirrors.tuna.tsinghua.edu.cn/ubuntu|g' /etc/apt/sources.list && \
#     sed -i 's|http://security.ubuntu.com/ubuntu|http://mirrors.tuna.tsinghua.edu.cn/ubuntu|g' /etc/apt/sources.list && \
# RUN   sed -i 's|http://ports.ubuntu.com/ubuntu-ports|http://mirrors.tuna.tsinghua.edu.cn/ubuntu-ports|g' /etc/apt/sources.list

# 设置本地化
RUN apt-get update && apt-get install -y \
    locales \
    curl \
    gnupg2

RUN locale-gen en_US en_US.UTF-8
ENV LANG=en_US.UTF-8
ENV LANGUAGE=en_US:en
ENV LC_ALL=en_US.UTF-8

# 添加 ROS 2 软件源
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg
RUN bash -c 'echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" | tee /etc/apt/sources.list.d/ros2.list > /dev/null'    

# 安装运行时依赖
RUN apt-get update && apt-get install -y \
    ros-$ROS_DISTRO-ros-base \
    && rm -rf /var/lib/apt/lists/*

# 复制构建结果
COPY --from=builder /workspace/install /opt/ros/$ROS_DISTRO/app

# 设置环境变量
ENV LD_LIBRARY_PATH=/opt/ros/$ROS_DISTRO/lib
ENV PATH=/opt/ros/$ROS_DISTRO/bin:$PATH
ENV PYTHONPATH=/opt/ros/$ROS_DISTRO/lib/python3.10/site-packages

# 设置 SHELL 为 bash，并加载 ROS 2 环境
SHELL ["/bin/bash", "-c"]
RUN echo "source /opt/ros/$ROS_DISTRO/setup.bash" >> ~/.bashrc

# 入口点
ENTRYPOINT ["/bin/bash"]
